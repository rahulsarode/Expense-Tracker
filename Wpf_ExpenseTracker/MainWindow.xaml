<Window x:Class="Wpf_ExpenseTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ExpenseTracker"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Expense Tracker" Height="500" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Expense Tracker" FontSize="32" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" Height="50" Width="800"/>
        <TabControl HorizontalAlignment="Left" SelectionChanged="TabControl_SelectionChanged" Height="420" Margin="0,50,0,0" VerticalAlignment="Top" Width="800">
            <TabItem Width="100" Header="Expenses">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="500"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="350"/>
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Expenses" FontSize="24" FontWeight="Bold" TextAlignment="Left" Width="760" Grid.ColumnSpan="2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Description of Expense" FontSize="12" VerticalAlignment="Top" Height="16" Width="121"/>
                    <TextBox x:Name="Tbx_filter" HorizontalAlignment="Left" Height="25" Margin="10,30,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" TextChanged="Tbx_filter_TextChanged"/>
                    <ListBox x:Name="Lbx_expenses"  HorizontalAlignment="Left"  Margin="10,60,0,40" Grid.Row="2" VerticalAlignment="Top" Width="280" SelectionChanged="Lbx_expenses_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding description}" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="-Added on " FontSize="11"/>
                                    <Run Text="{Binding expenseDate}" FontSize="11"/> 
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" Height="308" DataContext="{Binding ElementName=Lbx_expenses, Path=SelectedItem}" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Top" Width="450">
                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" Text="{Binding description}" Height="30" FontSize="18"  Margin="30,0,0,0"/>
                        <StackPanel Orientation="Horizontal" Height="25" Margin="0,10,0,0">
                            <TextBlock Margin="30,0,0,0" TextWrapping="Wrap" Width="70" Text="Description"/>
                            <TextBox Margin="0 0 0 0 " TextWrapping="Wrap" FontWeight="Bold" Text="{Binding description}" Width="250"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="25" Margin="0,10,0,0">
                            <TextBlock Margin="30 0 0 0" TextWrapping="Wrap" Width="70" Text="Category"/>
                            <ComboBox x:Name="Cbx_category" FontWeight="Bold" SelectedValue="{Binding category}" SelectionChanged="Cbx_category_SelectionChanged" Width="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="25" Margin="0,10,0,0">
                            <TextBlock Margin="30 0 0 0" TextWrapping="Wrap" Width="70" Text="Date"/>
                            <DatePicker x:Name="Dpr_expenseDate" FontWeight="Bold" SelectedDate="{Binding expenseDate}" SelectedDateChanged="Dpr_expenseDate_SelectedDateChanged" Margin="0,0,0,0" Width="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="25" Margin="0,10,0,0">
                            <TextBlock Margin="30 0 0 0" TextWrapping="Wrap" Width="70" Text="Amount"/>
                            <TextBox x:Name="Tbx_amount" FontWeight="Bold" TextChanged="Tbx_amount_TextChanged" Margin="0 0 0 0 " TextWrapping="Wrap" Text="{Binding amount}" Width="120"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,20" Grid.Row="1" VerticalAlignment="Bottom" Width="180">
                        <Button x:Name="Btn_add" Click="Btn_add_Click" Content="Add" Width="75"/>
                        <Button x:Name="Btn_delete" Click="Btn_delete_Click" Content="Delete" Width="75"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Budget" Width="100" >
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="350"/>
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,350" TextWrapping="Wrap" Text="Budget" FontSize="24" FontWeight="Bold" TextAlignment="Left" Width="760" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

                    <TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Category of Expense" FontSize="12" VerticalAlignment="Top" Height="16" Width="160"/>
                    <ListBox x:Name="Lbx_categories"  SelectionChanged="Lbx_categories_SelectionChanged" HorizontalAlignment="Left"  Margin="10,40,0,0" Grid.Row="1" VerticalAlignment="Top" Width="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding name}" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="-Money Available "/>
                                    <Run Text="{Binding moneyAvailable}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel x:Name="Stp_budget" Orientation="Vertical" DataContext="{Binding ElementName=Lbx_categories, Path=SelectedItem}" Grid.Column="1" HorizontalAlignment="Left" Height="260" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230">
                        <TextBlock Height="30" TextWrapping="Wrap" FontSize="16" Margin="30,0,0,0">
                            <Run Text="Budget for"></Run>
                            <Run Text="{Binding name}" FontWeight="Bold"></Run>
                        </TextBlock>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap" Text="Money Available " VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox x:Name="Tbx_moneyAvailable" FontWeight="Bold" TextWrapping="Wrap" IsEnabled="False" Text="{Binding moneyAvailable}" Width="70"/>
                        </StackPanel>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap" Text="Money Spent" VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox  TextWrapping="Wrap" FontWeight="Bold" IsEnabled="False" Text="{Binding moneySpent}" Width="70"/>
                        </StackPanel>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap" Text="Budget" VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox x:Name="Tbx_budget" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding totalBudget}" Width="70"  TextChanged="Tbx_budget_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="Stp_totalBudget" Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Left" Height="260" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230">
                        <TextBlock Height="30" TextWrapping="Wrap" FontSize="16" Margin="30,0,0,0">
                            <Run Text="Total Budget"></Run>
                        </TextBlock>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap" Text="Money Available" VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox x:Name="Tbx_totalMoneyAvailable" FontWeight="Bold" TextWrapping="Wrap" IsEnabled="False" Text="{Binding totalMoneyAvailable}" Width="70"/>
                        </StackPanel>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock  TextWrapping="Wrap" Text="Money Spent" VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox x:Name="Tbx_totalMoneySpent" FontWeight="Bold" TextWrapping="Wrap" IsEnabled="False" Text="{Binding totalMoneySpent}" Width="70"/>
                        </StackPanel>
                        <StackPanel Height="25" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap" Text="Total Budget" VerticalAlignment="Top" Margin="30,0,0,0" Width="100" Height="25"/>
                            <TextBox x:Name="Tbx_totalBudget" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding totalBudgetForAllCategories}" Width="70"  TextChanged="Tbx_budget_TextChanged" IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
